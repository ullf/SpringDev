<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="A" class="ru.markblog.A">
        <property name="name" value="A bean"></property>
        <property name="b">
            <ref bean="B" />
        </property>
        <constructor-arg>
            <ref bean="B" />
        </constructor-arg>

    </bean>

    <bean id="B" class="ru.markblog.B" scope="prototype">
        <property name="name" value="B bean"></property>
    </bean>

</beans>